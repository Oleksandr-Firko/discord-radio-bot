# Required: Discord bot token
DISCORD_TOKEN=

# Required: Application (Client) ID from Discord Developer Portal
DISCORD_CLIENT_ID=

# Optional: Dev guild ID for instant slash command updates (leave empty for global commands)
DISCORD_GUILD_ID=

# Optional: Role ID for management actions (join/radio/panel/stop/rescan/disconnect)
MANAGE_ROLE_ID=

# Optional: Role ID for playback control (play-pause/prev/skip/now)
# Note: MANAGE role also has control permissions automatically.
CONTROL_ROLE_ID=

# Optional: Absolute or relative path to music folder (default: ./music)
MUSIC_DIR=
